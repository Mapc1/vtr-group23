<?xml version='1.0' ?>
<project name='Terrain generation' width='1280' height='720'>
    <assets>
        <scenes>
            <scene name='sphere'> 
                <geometry name='Sphere' type='SPHERE' SLICES='512' STACKS='512' />
                <geometry name = "Grid" type = "GRID" LENGTH="20"  DIVISIONS="10" />
                
            </scene>
        </scenes>
        
        <cameras>
            <camera name='MainCamera'>
                <viewport name='MainViewport'/>
                <projection TYPE='PERSPECTIVE' FOV='60.0' NEAR='1' FAR='1000.0'/>
                <POSITION x='2' y='2' z='2'/>
                <LOOK_AT_POINT x='0' y='0' z='0'/>
                <UP x='0' y='1' z='0'/>
            </camera>
            
            <camera name="Noise">
                <viewport name="MainViewport" />
                <POSITION x="0" y="1" z="0" />
                <VIEW x="0" y="0" z="0" />
            </camera>
        </cameras>

        <lights>
			<light name='Sun'>
				<DIRECTION x='-2' y='-2' z='-2' />
                <COLOR r='0.9' g='0.9' b='0.9'/>
                <AMBIENT r='0.3' g='0.3' b='0.3'/>
			</light>
		</lights>


        <viewports>
            <viewport name='MainViewport'>
                <CLEAR_COLOR r='0.0' g='0.0' b='0.0'/>
            </viewport>
        </viewports>

        <materialLibs>
            <materialLib filename='terrain-generation.mlib'/>
        </materialLibs>
    </assets>

    <pipelines>
        <pipeline name='Main'>
            <pass name='GenNoise' class='default'>
                <scenes>
                    <scene name='sphere' />
                </scenes>
                
                <camera name="MainCamera"/>
			
				<lights>
					<light name="Sun"/>
				</lights>

                
                <material name='gen_noise' fromLibrary='base'/>
                <renderTarget name='rTarget' fromLibrary='base'/>
            </pass>

            <pass name='MainStep' class='default'>
                <COLOR_CLEAR value='false'/>
                <scenes>
                    <scene name='sphere' />
                </scenes>
                <camera name='MainCamera'/>
                <viewport name='MainViewport'/>
                <lights>
                    <light name='Sun'/>
                </lights>
                <materialMaps>
                    <map fromMaterial='*'
                        toMaterial='planets' toLibrary='base' />
                </materialMaps>
            </pass>

        </pipeline>
    </pipelines>
</project>